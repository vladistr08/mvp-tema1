<Window x:Class="Card_Game.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Game"
        mc:Ignorable="d"
        Title="SignUp" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="userInput" HorizontalAlignment="Left" Margin="301,38,0,0" TextWrapping="Wrap" Text="type here" VerticalAlignment="Top" Width="424" Height="58" FontSize="15"/>
        <Label Content="Enter your name:" HorizontalAlignment="Left" Margin="45,38,0,0" VerticalAlignment="Top" Height="55" Width="240" FontSize="30"/>
        <Image x:Name="imageSelect" HorizontalAlignment="Left" Height="247" Margin="45,135,0,0" VerticalAlignment="Top" Width="236"/>
        <Button Content="Prev" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Height="38" Width="48" Click="Button_Click"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="616,258,0,0" VerticalAlignment="Top" Height="38" Width="48"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="301,315,0,0" VerticalAlignment="Top" Height="52" Width="424" Click="Button_Click_1"/>

    </Grid>
</Window>
