<Window x:Class="Card_Game.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_Game.View"
        mc:Ignorable="d"
        Title="SignIn" Height="450" Width="800">
    <Window.DataContext>
        <local:User/>
    </Window.DataContext>
    <Grid>
        <Button Content="New User" HorizontalAlignment="Left" Margin="77,345,0,0" VerticalAlignment="Top" Height="37" Width="92" Click="Button_Click"/>
        <Button Content="Delete user" HorizontalAlignment="Left" Margin="239,345,0,0" VerticalAlignment="Top" Height="37" Width="92" Click="Button_Click_1"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="411,345,0,0" VerticalAlignment="Top" Height="37" Width="92" Click="Button_Click_2"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="600,345,0,0" VerticalAlignment="Top" Height="37" Width="92" Click="Button_Click_3"/>
        <ListBox ItemsSource="{Binding UserNames}" Margin="77,34,297,94" SelectionChanged="ListBox_SelectionChanged"/>
        <Image x:Name="imageAvatar" Margin="550,39,58,188"/>
        <Button Content="Help" HorizontalAlignment="Left" Margin="600,283,0,0" VerticalAlignment="Top" Height="37" Width="92" Click="Button_Click_3"/>

    </Grid>
</Window>
